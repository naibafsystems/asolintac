            <option value="1">JOOMDOC_BEFORE_TEXT</option>
            <option value="2">JOOMDOC_AFTER_TEXT</option>
        </field>        
                <field name="access_handling" type="radio" default="1" label="JOOMDOC_ACCESS_HANDLING" description="JOOMDOC_ACCESS_HANDLING_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="virtual_folder" type="radio" label="JOOMDOC_VIRTUAL_FOLDER"
               description="JOOMDOC_VIRTUAL_FOLDER_DESC" default="0" class="btn-group">
            <option value="1">JON</option>
            <option value="0">JOFF</option>
        </field>        
        <field name="confirm_overwrite" type="radio" label="JOOMDOC_CONFIRM_OVERWRITE"
               description="JOOMDOC_CONFIRM_OVERWRITE_DESC" default="0" class="btn-group">
            <option value="1">JON</option>
            <option value="0">JOFF</option>
        </field>        
    </fieldset>
</config>