            <option value="2">JOOMDOC_AFTER_TEXT</option>
        </field>
        -->
        <field name="edocs_detail" type="list" label="JOOMDOC_EDOCS_DETAIL" default="0" description="JOOMDOC_EDOCS_LIST_DESC">
